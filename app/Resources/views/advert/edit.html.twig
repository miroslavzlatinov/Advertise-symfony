{% extends 'base.html.twig' %}

{% block body %}
    <h1>Advert edit</h1>
{% include 'flash/flash.html.twig' %}
<div class="countainer-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />

    {{ form_end(edit_form) }}
<div>
    <ul>
        <li>
            <a href="{{ path('advert_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% if edit_form.vars.value.mainPicture is not null %}
        <h1>Main Picture</h1>
        <img src="{{ asset('/images/advert/'~edit_form.vars.value.mainPicture) }}"/>
    {% endif %}
    <h1>Galery Pictures</h1>
    {% for image in edit_form.vars.value.galery %}
    <img src="{{ asset('/images/advert/'~image.location) }}"/>
        <a href="/image/{{ image.id }}/edit" class="label label-warning">Delete Picture</a>



    {% endfor %}


    <div>
{% endblock %}
