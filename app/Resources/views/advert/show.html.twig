{% extends 'base.html.twig' %}

{% block body %}
    <h1>Advert</h1>
    {% include 'flash/flash.html.twig' %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advert.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ advert.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advert.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ advert.price }}</td>
            </tr>
            <tr>
                <th>Mainpicture</th>
                <td>{{ advert.mainPicture }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if advert.Published %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Expdate</th>
                <td>{{ advert.expdate | date("m/d/Y")  }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if advert.createDate %}{{ advert.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Viewscount</th>
                <td>{{ advert.viewsCount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('advert_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('advert_edit', { 'id': advert.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
